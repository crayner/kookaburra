{% trans_default_domain 'messages' %}

<ul class="list-none flex flex-wrap items-center m-0 px-2 border-t border-b">
    <li class="pl-2 mt-1">
        <a class="block uppercase font-bold text-sm text-gray-800 hover:text-purple-500 no-underline px-2 py-3" href="{{ path('home') }}">{{ 'Home'|trans }}</a>
    </li>

    {% if getMainMenu().valid and getMainMenu().hasAttribute('menuMainItems') %}
        {% for categoryName, items in getMainMenu().getAttribute('menuMainItems')|default({}) if is_granted('IS_AUTHENTICATED_FULLY') %}
            <li class="sm:relative group mt-1">
                <a class="block uppercase font-bold text-sm text-gray-800 hover:text-purple-500 no-underline px-2 py-3" href="#">{{ categoryName|trans }}</a>

                <ul class="list-none bg-transparent-900 absolute hidden group-hover:block w-full sm:w-48 left-0 m-0 -mt-1 py-1 sm:p-1 z-50">
                    {% for item in items %}
                    <li class="hover:bg-purple-700">
                        <a class="block text-sm text-white focus:text-purple-200 text-left no-underline px-1 py-2 md:py-1 leading-normal" href="{{ checkURL(item) }}">{{ item.name|trans({}, item.textDomain|default('messages')) }}</a>
                    </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    {% endif %}

    <li class="notificationTray self-end flex-grow" id="notificationTray">
        {{ notificationTray()|raw }}
    </li>
</ul>


